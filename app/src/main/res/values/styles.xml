<resources>

    <!--
        Main app theme
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.TranslucentStatus"/>


    <!--
        Text styles
    -->
    <style name="StandardTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleTextStyle" parent="StandardTextStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle" parent="StandardTextStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:drawablePadding">@dimen/margin_medium</item>
        <item name="android:maxLines">1</item>

    </style>


    <!--
        Button styles
    -->
    <style name="RaisedButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorBackground">@color/theme_accent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
    </style>

    <style name="FlatButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
    </style>


    <!--
        Other styles
    -->
    <style name="CardViewStyle" parent="CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="cardCornerRadius">@dimen/margin_small</item>
        <item name="elevation">@dimen/card_elevation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
